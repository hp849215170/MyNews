<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_5_dip"
    android:layout_marginLeft="@dimen/dimen_5_dip"
    android:layout_marginRight="@dimen/dimen_5_dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/news_image"
            android:layout_width="86dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/dimen_6_dip"
            android:layout_marginRight="@dimen/dimen_6_dip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/news_title"
                style="@style/News.title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="中山大学计算机研究所中山大学计算机研究所中山大学计算机研究所中山大学计算机研究所"
                />

            <TextView
                android:id="@+id/news_content"
                style="@style/News.content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3_dip"
                android:text="中山大学计算机研究所中山大学计算机研究所中山大学计算机研究所"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>